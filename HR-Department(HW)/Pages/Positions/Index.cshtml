@page
@model HR_Department_HW_.Pages.Positions.IndexModel

@{
    ViewData["Title"] = "Positions";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Positions</h1>

<p>
    @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin123@gmail.com")
    {
        <a asp-page="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionSalary)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin123@gmail.com")
                {
                    <a asp-page="./Edit" asp-route-id="@item.PositionId">Edit</a>
                    <span>|</span>
                    <a asp-page="./Delete" asp-route-id="@item.PositionId">Delete</a>
                    <span>|</span>
                }
                <a asp-page="./Details" asp-route-id="@item.PositionId">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
