@model HR_Department_HW_.Pages.Positions.CreateModel

@{
    ViewData["Title"] = "Create position";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create position</h1>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
